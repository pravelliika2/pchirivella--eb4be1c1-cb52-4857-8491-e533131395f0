{
  "name": "task-management-system",
  "version": "1.0.0",
  "private": true,
  "description": "Secure Task Management System with RBAC",
  "scripts": {
    "build": "pnpm build:api && pnpm build:dashboard",
    "build:api": "tsc -p apps/api/tsconfig.app.json",
    "build:dashboard": "pnpm nx build dashboard",
    "dev": "concurrently \"pnpm start:api\" \"pnpm start:dashboard\"",
    "start:api": "ts-node -r tsconfig-paths/register apps/api/src/main.ts",
    "start:dashboard": "pnpm nx serve dashboard",
    "seed": "ts-node -r tsconfig-paths/register apps/api/src/scripts/seed.ts"
  },
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/cdk": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@nestjs/common": "latest",
    "@nestjs/core": "latest",
    "@nestjs/jwt": "latest",
    "@nestjs/microservices": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "latest",
    "@nestjs/typeorm": "latest",
    "@nestjs/websockets": "latest",
    "@sap/hana-client": "latest",
    "@standard-schema/spec": "latest",
    "bcryptjs": "latest",
    "better-sqlite3": "latest",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "latest",
    "reflect-metadata": "latest",
    "rxjs": "latest",
    "sqlite3": "^5.1.6",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.14",
    "tslib": "^2.3.0",
    "typeorm": "latest",
    "zone.js": "^0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular/cli": "^18.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@nx/angular": "^22.1.3",
    "@nx/eslint": "^22.1.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/express": "^4.17.17",
    "@types/node": "^22",
    "@types/passport-jwt": "^4.0.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.1",
    "nx": "^22.1.3",
    "postcss": "^8.5",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.5.4"
  },
  "trustedDependencies": [
    "pg-native"
  ]
}